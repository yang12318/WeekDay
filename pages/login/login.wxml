<!--pages/login/login.wxml-->
<cu-custom bgColor="bg-gradual-lightorange" isBack="{{false}}">
  <view slot="content">EMAIL</view>
</cu-custom>
<form bindsubmit='save' report-submit='true'>
    <view class="cu-form-group solid-bottom">
      <view class="title">邮箱</view>
      <input placeholder="仅限ouc邮箱" name="account" value="{{account}}"></input>
    </view>
    <view class="cu-form-group solid-bottom">
      <view class="title">密码</view>
      <input type="password" name="password" value="{{password}}"></input>
    </view>
    <view class="cu-bar btn-group bg-white">
      <button class="cu-btn bg-cyan" form-type='submit'>登录</button>
    </view>
</form>