<!--pages/email/email.wxml-->
<cu-custom bgColor="bg-gradual-lightorange" isBack="{{true}}">
  <view slot="backText">返回</view>
</cu-custom>
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{0==TabCur?'text-orange cur':''}}" bindtap="tabSelect" data-id="0">
    收件箱
    </view>
    <view class="cu-item flex-sub {{1==TabCur?'text-orange cur':''}}" bindtap="tabSelect" data-id="1">
    已发送
    </view>
  </view>
</scroll-view>
<block wx:if="{{TabCur==0}}">
  <view class="cu-list menu-avatar" wx:for="{{inbox}}" wx:if="{{condition1}}" wx:for-index="index">
    <view class="cu-item solid-bottom" data-id="{{item.id}}" data-index="{{index}}">
      <view class="content">
        <view class="text-grey">
            <text class="margin-right-s text-l">{{item.title}}</text>
        </view>
        <view class="text-gray text-sm flex">
          <text class="text-cut">
              <text class="margin-right-s"></text>{{item.sender}}
          </text>
        </view>
         <view class="text-gray text-sm flex">
          <text class="text-cut">
              <text class="margin-right-s"></text>{{item.date}}
          </text>
        </view>
      </view>
    </view>
  </view>
</block>

<block wx:if="{{TabCur==1}}">
  <view class="cu-list menu-avatar" wx:for="{{finished}}" wx:if="{{condition2}}" wx:for-index="index">
    <view class="cu-item solid-bottom" data-id="{{item.id}}" data-index="{{index}}">
      <view class="content">
        <view class="text-grey">
            <text class="margin-right-s text-l">{{item.title}}</text>
        </view>
        <view class="text-gray text-sm flex">
          <text class="text-cut">
              <text class="margin-right-s"></text>{{item.sender}}
          </text>
        </view>
         <view class="text-gray text-sm flex">
          <text class="text-cut">
              <text class="margin-right-s"></text>{{item.date}}
          </text>
        </view>
      </view>
    </view>
  </view>
  <button class="cu-btn icon bg-orange xlg post" bindtap='add'>
    <text class="cuIcon-add"></text>
  </button>
</block>